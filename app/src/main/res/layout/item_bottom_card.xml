<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.arildojr.nubank.R"/>
        <variable name="item" type="com.arildojr.nubank.enums.BottomCardsEnum"/>
        <variable name="onClick" type="com.arildojr.nubank.ui.adapters.OnClickMenu"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="104dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:layout_height="104dp"
        android:backgroundTint="@color/cardLightPurple"
        android:layout_marginEnd="0dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="6dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_add_user"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham_book"
            android:text="@{item.title}"
            tools:text="Indicar\namigos"/>

    </androidx.cardview.widget.CardView>
</layout>