<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonGrayRound" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_button_gray_stroke_round</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.EnterFromBottom" parent="AppTheme.Transparent">
        <item name="android:windowEnterAnimation">@anim/slide_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_to_bottom</item>
    </style>
</resources>
